<odoo>
    <data>
        <record id="view_dynamic_form_list" model="ir.ui.view">
            <field name="name">dynamic.form.list</field>
            <field name="model">dynamic.form</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_dynamic_form_form" model="ir.ui.view">
            <field name="name">dynamic.form.form</field>
            <field name="model">dynamic.form</field>
            <field name="arch" type="xml">
                <form string="Dynamic Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="row_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="column_ids">
                                        <list>
                                            <field name="name"/>
                                            <field name="value"/>
                                            <field name="calculated_value"/>
                                        </list>
                                    </field>
                                </list>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_dynamic_form" model="ir.actions.act_window">
            <field name="name">Dynamic Form</field>
            <field name="res_model">dynamic.form</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_dynamic_form_root" name="Dynamic Form Builder"/>
        <menuitem id="menu_dynamic_form" name="Forms" parent="menu_dynamic_form_root" action="action_dynamic_form"/>
    </data>
</odoo>
