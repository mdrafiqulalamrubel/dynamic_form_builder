<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dynamic Form list View -->
    <record id="view_dynamic_form_list" model="ir.ui.view">
        <field name="name">dynamic.form.list</field>
        <field name="model">dynamic.form</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="created_date"/>
                <field name="created_by"/>
            </list>
        </field>
    </record>

    <!-- Dynamic Form Form View -->
    <record id="view_dynamic_form_form" model="ir.ui.view">
        <field name="name">dynamic.form.form</field>
        <field name="model">dynamic.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Dynamic Table">
                            <field name="table_data" widget="dynamic_table"/>
                        </page>
                        <page string="Rows">
                            <field name="row_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="formula"/>
                                    <field name="result"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dynamic Form Search View -->
    <record id="view_dynamic_form_search" model="ir.ui.view">
        <field name="name">dynamic.form.search</field>
        <field name="model">dynamic.form</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="created_by"/>
                <filter string="My Forms" domain="[('created_by', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Created By" name="created_by" context="{'group_by': 'created_by'}"/>
                    <filter string="Created Date" name="created_date" context="{'group_by': 'created_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>